<%- include('./index.ejs') %>
<div class="container">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Dept_ID</th>
            <th scope="col">Department's Name</th>
            
           
         
          </tr>
        </thead>
        <tbody>
          <% if(data.length){
         
          for(var i = 0; i< data.length; i++) {%>  
          <tr>
            <th scope="row"><%= data[i].dept_id %></th>
