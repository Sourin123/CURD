            <td>
            <a class="btn btn-success edit" href="">Edit</a>                                            
           </td>
          </tr>
          <% }
                   
           }else{ %>
               <tr>
                  <td colspan="3">No user</td>
               </tr>
            <% } %>    
          <tr>
            <form action="" method="post">
                <td></td>
                <td><input type="text" name="dept_name" required class="input-group-text" placeholder="Enter Department's name"></td>
                <td> <input class="form-control" aria-label="With textarea" name = "dept_about" placeholder="Description "  required ></td>
                <td><input type="submit" value="submit" class="btn btn-success edit"></td>
                </form>
            
            </tr>
        </tbody>
        </table>
    
      </div>